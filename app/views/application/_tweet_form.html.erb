<section class="post-item">
    <header>
        <div class="post-user-image">
            <% if @current_user.image %>
                <%= image_tag @current_user.image.thumb50.url, style: "border-radius: 50%;" %>
            <% else %>
                <%= image_tag "assets/default.png", width: "70px" %>
            <% end %>
        </div>
    </header>
    <div class="tweet-form">
        <%= form_for @post do |f| %>
            <div class="form-group"> 
                <%= f.text_area :content, :placeholder => "今何してる？", class: 'form-control', rows: 4, cols: 30 %>
            </div>
            <%= f.submit 'ツイートする', class: 'tweet-btn' %>
        <% end %>
    </div>
</section>
